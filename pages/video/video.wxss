.videoContainer .header{
    display: flex;
    margin:10rpx 0;
    height: 53rpx;
}
.videoContainer .search{
    flex:1;
    border: 1rpx solid #eee;
    margin: 0 20rpx;
    padding-left: 30rpx;
    border-radius: 30rpx;
    font-size: 30rpx;
    line-height: 60rpx;
}
.videoContainer .header image{
  width: 60rpx;
  height: 60rpx;
}
/* 导航区域 */
.navScroll{
    display: flex;
    height: 62rpx;
    white-space: nowrap;
}
.navScroll .navItem{
   padding: 0 20rpx;
   font-size: 30rpx;
   height:60rpx;
   line-height: 60rpx;
}
.navScroll .active{
    border-bottom: 1rpx solid #d43c33;
}

/* 视频样式 */
.videoScroll{
    margin-top: 20rpx;
    /* C3固定头部方法 */
    /* calc 可以动态的计算css宽高，运算符左右两侧必须加空格，否则计算会失效 */
    /* 视口单位 1vh = 1% 视口高度 1vw = 1% 视口宽度 */
    height:calc(100vh - 132rpx)
}
