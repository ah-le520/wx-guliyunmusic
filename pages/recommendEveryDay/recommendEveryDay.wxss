/* pages/recommendEveryDay/recommendEveryDay.wxss */
.recommendContainer{
    font-size: 32rpx;
}
/* 头部区域 */
.header {
    position: relative;
 width: 100%;
 height: 300rpx;
}
.header image{
    width: 100%;
    height: 100%;
}
.header .data{
    position:absolute;
    top:50%;
    left:50%;
    margin-left: -130rpx;
    margin-top:-40rpx;
    width: 300rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    font-size: 50rpx;
    color:#fff;
}
/* 列表区域 */
.listContainer{
    position: relative;
    top: -20rpx;
    padding: 0 20rpx;
    background: #fff;
    border-radius: 30rpx;
}
.listHeader{
    display: flex;
    justify-content: space-between;
    height: 80rpx;
    line-height: 80rpx;
}
/* 列表内容 */
.listScroll{
    height: calc(100vh - 380rpx);
}
.scrollItem{
    position: relative;
    display: flex;
    margin-bottom: 20rpx;
}
.scrollItem image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
}
.scrollItem .musicInfo{
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}
.scrollItem .musicInfo text{
    height: 40rpx;
    line-height: 40rpx;
    max-width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.scrollItem .iconfont{
    position: absolute;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    text-align: right;
    font-size: 50rpx;
}